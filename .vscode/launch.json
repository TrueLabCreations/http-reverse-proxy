{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
  {
    "type": "node",
    "request": "attach",
    "name": "Attach by Process ID",
    "processId": "${command:PickProcess}"
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Test JS",
      "program": "${workspaceFolder}/src/testJS.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name":"Run Https example",
      "env":
        {
          "NODE_ENV":"development"
        },
      "program": "${workspaceFolder}/src/examples/simpleHttpsProxy.ts",
      "outFiles": [
        "${workspaceFolder}/dist/src/examples/*.js"
      ],
      "cwd": "${workspaceFolder}/"
    },
    {
      "type": "node",
      "request": "launch",
      "name":"Run Blackbox Tests",
      "env":
        {
          "NODE_ENV":"development"
        },
      "program": "${workspaceFolder}/test/blackboxTests.ts",
      "args":[
        "all",
        "1"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/test/*.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name":"Run Server",
      "env":
        {
          "NODE_ENV":"development"
        },
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": [
        "${workspaceFolder}/dist/src/*.js"
      ],
      "cwd": "${workspaceFolder}/dist"
    }
  ]
}